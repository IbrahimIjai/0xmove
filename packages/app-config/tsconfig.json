{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020"],
		"moduleResolution": "Bundler",
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"outDir": "dist",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"]
}
